# Git
alias gst='git status'
alias ga='git add'
alias gp='git push'
alias gco='git checkout'
alias gb='git branch'
alias gl='git log --oneline --graph --decorate --all'
alias gd='git diff'

# Directórios e listagem
alias ls="eza -al --color=always --group-directories-first"

# Pager / cat com cor
alias bat="batcat --paging=never"
alias cat="batcat --paging=never"

# Limpeza de tela
alias c='clear'

# Atualização sistema
alias update='sudo apt update && sudo apt upgrade -y'

# NPM / pnpm
alias npm-clean='npm cache clean --force'
alias pnpm-clean='pnpm store prune'

# Dotfiles / setup
alias setup-dotfiles='bash ~/scripts/setup.sh'
alias dotfiles='code --folder-uri "file://$HOME/code/dotfiles"'
alias cddotfiles='cd ~/code/.dotfiles'

# V&F shortcuts
alias vef='code --folder-uri "file://$HOME/code/vai-e-faz"'
alias cdvef='cd ~/code/vai-e-faz'
alias dbvef='psql -h localhost -U vaiefaz -d vaiefazdb'
alias dbvef-docker='docker-compose -f ~/code/vai-e-faz/docker-compose.yaml up -d'


# Gold Tech shortcuts
alias gs='code --folder-uri "file://$HOME/code/goldtech-system/"'
alias cdgs='cd ~/code/goldtech-system'
alias dbgs='psql -h localhost -U gtech -d gtech-postgres'
alias dngs-docker='docker-compse -f ~/code/goldtech-system/gtech-api/docker-compose.yaml up -d'
# Docker
alias d='docker'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias dcu='docker-compose up -d'
alias dcd='docker-compose down'
alias dlogs='docker-compose logs -f'
alias dbash='docker exec -it'      # Ex: dbash <ctr> /bin/bash
alias dprune='docker system prune -af'

# Ferramentas interativas
alias grep='rg'
alias lg='lazygit'
alias h='history | fzf'

# Navegação
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Editor
alias zrc='nano ~/.zshrc'
